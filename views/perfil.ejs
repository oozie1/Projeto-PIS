<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>O Meu Perfil</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/perfil_style.css">
</head>
<body>

    <header>
        <div>
            <h1>Ol√°, <%= user.nome_utilizador %>!</h1>
            <p style="color: #aaa; margin: 5px 0 0 0;">
                <%= (typeof user.is_admin !== 'undefined' && (user.is_admin === 1 || user.is_admin === true)) ? 'Painel de Administra√ß√£o' : 'Bem-vindo √† tua √°rea pessoal.' %>
            </p>
        </div>
        <div>
            <a href="/" class="btn-home">Voltar ao In√≠cio</a>
            <a href="/auth/logout" class="btn-logout">Terminar Sess√£o</a>
        </div>
    </header>

    <% if (typeof user.is_admin !== 'undefined' && (user.is_admin === 1 || user.is_admin === true)) { %>
        
        <div class="section-header">
            <h2>Gerir Utilizadores</h2>
            <button class="btn-action btn-create" onclick="openModal('createModal')">+ Criar Utilizador</button>
        </div>

        <% if (typeof listaUsuarios !== 'undefined' && listaUsuarios.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Cargo</th>
                        <th style="text-align: right;">A√ß√£o</th>
                    </tr>
                </thead>
                <tbody>
                    <% listaUsuarios.forEach(u => { %>
                        <tr>
                            <td><%= u.nome_utilizador %></td>
                            <td><%= u.email %></td>
                            <td>
                                <span class="badge <%= (u.is_admin === 1 || u.is_admin === true) ? 'badge-admin' : 'badge-user' %>">
                                    <%= (u.is_admin === 1 || u.is_admin === true) ? 'Admin' : 'Utilizador' %>
                                </span>
                            </td>
                            <td style="text-align: right;">
                                <% if (u.id_utilizador !== user.id_utilizador) { %>
                                    <button class="btn-action btn-edit-pencil" onclick="openEditModal('<%= u.id_utilizador %>', '<%= u.nome_utilizador %>', '<%= u.is_admin %>')">
                                        ‚úé Editar
                                    </button>
                                <% } else { %>
                                    <span style="color: #555; font-size: 12px;">(Tu)</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>

        <div id="createModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal('createModal')">&times;</span>
                <h3 style="color: #f5c518;">Novo Utilizador</h3>
                <form action="/auth/admin/create" method="POST">
                    <input type="text" name="nome" placeholder="Nome" required>
                    <input type="email" name="email" placeholder="Email" required>
                    <input type="password" name="senha" placeholder="Senha" required>
                    <button type="submit" class="btn-action btn-create" style="width:100%;">Registar</button>
                </form>
            </div>
        </div>

        <div id="editModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal('editModal')">&times;</span>
                <h3 style="color: #f5c518;">Editar Utilizador</h3>
                <form id="editForm" method="POST">
                    <label style="font-size: 12px; color: #777;">Nome de Utilizador</label>
                    <input type="text" name="novoNome" id="editNome" required>
                    <label style="font-size: 12px; color: #777;">Cargo</label>
                    <select name="status" id="editAdminStatus">
                        <option value="0">Utilizador Comum</option>
                        <option value="1">Administrador</option>
                    </select>
                    <button type="submit" class="btn-action btn-create" style="width:100%; background: #f5c518; color: black;">Guardar Altera√ß√µes</button>
                </form>
                <hr style="border: 0; border-top: 1px solid #333; margin: 20px 0;">
                <form id="deleteForm" method="POST" onsubmit="return confirm('Tem a certeza?')">
                    <button type="submit" class="btn-action btn-delete">üóë Eliminar Conta</button>
                </form>
            </div>
        </div>

    <% } else { %>

        <h2 style="border-left: 5px solid #f5c518; padding-left: 15px; margin-bottom: 25px;">Os teus Favoritos</h2>
        
        <% if (typeof favoritos !== 'undefined' && favoritos.length > 0) { %>
            <div class="grid">
                <% favoritos.forEach(filme => { %>
                    <div class="card">
                        <a href="/details/<%= (filme.tipo === 'Serie' ? 'tv' : 'movie') %>/<%= filme.tmdb_id %>?origin=perfil">
                            <img src="https://image.tmdb.org/t/p/w300<%= filme.poster_url %>" alt="<%= filme.nome %>">
                            <div class="info">
                                <h4><%= filme.nome %></h4>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <p>Ainda n√£o tens filmes favoritos.</p>
                <a href="/" style="color: #f5c518; text-decoration: none;">Vai explorar!</a>
            </div>
        <% } %>

        <h2 style="border-left: 5px solid #2ecc71; padding-left: 15px; margin-bottom: 25px; margin-top: 50px;">Hist√≥rico de Visualiza√ß√µes</h2>
        
        <% if (typeof vistos !== 'undefined' && vistos.length > 0) { %>
            <div class="grid">
                <% vistos.forEach(filme => { %>
                    <div class="card">
                        <a href="/details/<%= (filme.tipo === 'Serie' ? 'tv' : 'movie') %>/<%= filme.tmdb_id %>?origin=perfil">
                            <img src="https://image.tmdb.org/t/p/w300<%= filme.poster_url %>" alt="<%= filme.nome %>">
                            <div class="info">
                                <h4><%= filme.nome %></h4>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <p>Ainda n√£o marcaste nenhum filme como visto.</p>
            </div>
        <% } %>

        <div class="section-header" style="margin-top: 50px;">
            <h2>As Minhas Listas</h2>
            <button class="btn-action btn-create" onclick="openModal('newListModal')">+ Criar Nova Lista</button>
        </div>

        <% if (typeof listas !== 'undefined' && listas.length > 0) { %>
            <div class="grid">
                <% listas.forEach(lista => { %>
                    <div class="card" style="padding: 20px; text-align: center; position: relative;">
                        
                        <form action="/api/listas/apagar/<%= lista.id_lista %>" method="POST" onsubmit="return confirm('Apagar lista <%= lista.nome_lista %>?');" style="position: absolute; top: 10px; right: 10px;">
                            <button type="submit" style="background:none; border:none; color: #e21c3c; cursor: pointer; font-size: 1.1rem;" title="Apagar Lista">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>

                        <button onclick="openEditListModal('<%= lista.id_lista %>', '<%= lista.nome_lista %>')" style="position: absolute; top: 10px; left: 10px; background:none; border:none; color: #ccc; cursor: pointer; font-size: 1.1rem;" title="Editar Nome">
                            <i class="fa-solid fa-pen"></i>
                        </button>

                        <i class="fa-solid fa-list-ul" style="font-size: 2.5rem; color: #f5c518; margin-bottom: 10px; margin-top: 15px;"></i>
                        <h4><%= lista.nome_lista %></h4>
                        <a href="/perfil/lista/<%= lista.id_lista %>" class="btn-action btn-edit-pencil" style="margin-top: 15px; justify-content: center; text-decoration: none;">Ver Lista</a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state"><p>Ainda n√£o criaste nenhuma lista.</p></div>
        <% } %>

        <div id="newListModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal('newListModal')">&times;</span>
                <h3 style="color: #f5c518;">Nova Lista</h3>
                <form action="/api/listas/criar" method="POST">
                    <input type="text" name="nome_lista" placeholder="Nome da lista (ex: Para Ver Depois)" required>
                    <button type="submit" class="btn-action btn-create" style="width:100%;">Criar</button>
                </form>
            </div>
        </div>

        <div id="editListModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal('editListModal')">&times;</span>
                <h3 style="color: #f5c518;">Editar Nome da Lista</h3>
                <form action="/api/listas/editar" method="POST">
                    <input type="hidden" name="id_lista" id="editListId">
                    <input type="text" name="novo_nome" id="editListName" required>
                    <button type="submit" class="btn-action btn-create" style="width:100%; background: #f5c518; color: black; margin-top: 15px;">Guardar</button>
                </form>
            </div>
        </div>

    <% } %>

    <script src="/js/perfil.js"></script>

</body>
</html>