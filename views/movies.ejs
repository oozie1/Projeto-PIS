<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= movie.title || movie.name %> - Detalhes</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/movie_style.css">
</head>
<body>

    <a href="/" style="display:inline-block; margin-bottom: 20px; font-weight:600;">&larr; Voltar</a>

    <div class="movie-header">
        <% if (movie.poster_path) { %>
            <img class="poster" src="<%= imageBaseUrl + movie.poster_path %>" alt="<%= movie.title || movie.name %>">
        <% } else { %>
            <img class="poster" src="https://via.placeholder.com/300x450" alt="Sem Imagem">
        <% } %>

        <div class="info-section">
            <h1><%= movie.title || movie.name %> <span class="year"><%= (movie.release_date || movie.first_air_date || '').split('-')[0] %></span></h1>
            
            <div class="meta-tags">
                <% if (movie.genres) { %>
                    <% movie.genres.slice(0, 3).forEach(g => { %>
                        <span class="tag"><%= g.name %></span>
                    <% }) %>
                <% } %>
                <span><%= movie.runtime ? movie.runtime + ' min' : (movie.episode_run_time ? movie.episode_run_time[0] + ' min/ep' : 'N/A') %></span>
            </div>

            <p style="line-height: 1.6; color: #ccc; margin-bottom: 20px;">
                <%= movie.overview || "Sem sinopse disponível." %>
            </p>

            <% if (movie.credits && movie.credits.cast && movie.credits.cast.length > 0) { %>
                <div style="margin-bottom: 30px; font-size: 0.95rem; color: #888;">
                    <span style="color: #bbb; font-weight: 600; margin-right: 5px;">Elenco Principal:</span>
                    <%= movie.credits.cast.slice(0, 5).map(actor => actor.name).join(', ') %>
                </div>
            <% } %>
            <div class="action-bar">
                <% if (user) { %>
                    <form action="/api/conteudo/favoritos" method="POST" class="icon-form">
                        <input type="hidden" name="tmdb_id" value="<%= movie.id %>">
                        <input type="hidden" name="titulo" value="<%= movie.title || movie.name %>">
                        <input type="hidden" name="poster" value="<%= movie.poster_path %>">
                        <input type="hidden" name="tipo" value="<%= movie.title ? 'Filme' : 'Serie' %>"> 
                        
                        <button type="submit" class="btn-icon heart <%= (typeof isFavorito !== 'undefined' && isFavorito) ? 'active' : '' %>" title="Favoritos">
                            <i class="<%= (typeof isFavorito !== 'undefined' && isFavorito) ? 'fa-solid' : 'fa-regular' %> fa-heart"></i>
                        </button>
                    </form>

                    <form action="/api/conteudo/vistos" method="POST" class="icon-form">
                        <input type="hidden" name="tmdb_id" value="<%= movie.id %>">
                        <input type="hidden" name="titulo" value="<%= movie.title || movie.name %>">
                        
                        <button type="submit" class="btn-icon eye" title="Marcar como Visto">
                            <i class="fa-regular fa-eye"></i>
                        </button>
                    </form>

                    <button type="button" class="btn-icon" onclick="document.getElementById('listModal').style.display='block'" title="Adicionar à Lista">
                        <i class="fa-solid fa-plus"></i>
                    </button>
                <% } %>
                
                <div class="rating-badge">
                    <i class="fa-solid fa-star" style="color:#f5c518"></i> <%= movie.vote_average ? movie.vote_average.toFixed(1) : 'N/A' %>
                </div>
            </div>
        </div>
    </div>

    <div id="listModal" class="modal">
        <div class="modal-content">
            <span class="close-modal" onclick="document.getElementById('listModal').style.display='none'">&times;</span>
            <h3 style="color: #f5c518; margin-bottom: 20px;">Guardar em...</h3>
            
            <form action="/api/listas/adicionar" method="POST">
                <input type="hidden" name="tmdb_id" value="<%= movie.id %>">
                <input type="hidden" name="titulo" value="<%= movie.title || movie.name %>">
                <input type="hidden" name="poster" value="<%= movie.poster_path %>">
                
                <div style="max-height: 200px; overflow-y: auto; margin-bottom: 15px;">
                    <% if (typeof listasUsuario !== 'undefined' && listasUsuario.length > 0) { %>
                        <% listasUsuario.forEach(l => { %>
                            <label class="list-option">
                                <input type="radio" name="id_lista" value="<%= l.id_lista %>" required> <%= l.nome_lista %>
                            </label>
                        <% }) %>
                    <% } else { %>
                        <p style="font-size: 0.9rem; color:#888;">Ainda não tens listas criadas.</p>
                    <% } %>
                </div>

                <% if (typeof listasUsuario !== 'undefined' && listasUsuario.length > 0) { %>
                    <button type="submit" class="btn-yellow">Confirmar</button>
                <% } %>
            </form>
        </div>
    </div>

    <div class="review-section">
    <% if (user) { %>
        <h3 style="color: #fff; margin-bottom: 20px;">A tua Avaliação</h3>
        
        <form action="/api/conteudo/review" method="POST" style="margin-bottom: 40px;">
            <input type="hidden" name="tmdb_id" value="<%= movie.id %>">
            <input type="hidden" name="titulo" value="<%= movie.title || movie.name %>">
            <input type="hidden" name="poster" value="<%= movie.poster_path %>">
            <input type="hidden" name="tipo" value="<%= movie.title ? 'Filme' : 'Serie' %>">
            
            <input type="hidden" id="ratingInput" name="classificacao" 
                   value="<%= (typeof userReview !== 'undefined' && userReview) ? userReview.classificacao : '' %>">

            <div class="star-rating-container" id="starContainer">
                <% for(let i=1; i<=10; i++) { %>
                    <i class="fa-star fa-regular star-item" data-value="<%= i %>"></i>
                <% } %>
            </div>

            <textarea name="critica" placeholder="Escreve aqui a tua opinião... O que achaste do filme?" rows="3" style="width: 100%; padding: 10px; border-radius: 5px; background: #333; color: white; border: 1px solid #444; margin-top: 10px; resize: vertical;"><%= (typeof userReview !== 'undefined' && userReview) ? userReview.critica : '' %></textarea>
            
            <button type="submit" class="btn-yellow" style="margin-top: 10px;">
                <%= (typeof userReview !== 'undefined' && userReview) ? 'Atualizar Review' : 'Publicar Review' %>
            </button>
        </form>
    <% } else { %>
        <div style="text-align:center; padding: 20px; background: #222; border-radius: 8px; margin-bottom: 30px;">
            <p style="color:#ccc;">Faz <a href="/auth/login" style="color: #f5c518;">login</a> para deixares a tua opinião.</p>
        </div>
    <% } %>

    <div class="community-reviews" style="border-top: 1px solid #333; padding-top: 30px;">
        <h3 style="color: #f5c518; margin-bottom: 20px;"><i class="fa-regular fa-comments"></i> Opiniões da Comunidade</h3>

        <% if (typeof publicReviews !== 'undefined' && publicReviews.length > 0) { %>
            <div class="reviews-list" style="display: flex; flex-direction: column; gap: 15px;">
                <% publicReviews.forEach(rev => { %>
                    <div class="review-bubble" style="background: #1e1e1e; padding: 15px; border-radius: 10px; border-left: 4px solid #f5c518;">
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                            <span style="font-weight: bold; color: white; font-size: 1rem;">
                                <%= rev.nome_utilizador %>
                            </span>
                            <span style="color: #f5c518; font-size: 0.9rem;">
                                <i class="fa-solid fa-star"></i> <%= rev.classificacao %>/10
                            </span>
                        </div>
                        <% if (rev.critica) { %>
                            <p style="color: #ccc; font-size: 0.95rem; margin: 0; line-height: 1.5;">
                                "<%= rev.critica %>"
                            </p>
                        <% } else { %>
                            <p style="color: #666; font-size: 0.85rem; font-style: italic; margin: 0;">
                                (Sem comentário escrito)
                            </p>
                        <% } %>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p style="color: #777; font-style: italic;">Ainda não há opiniões sobre este filme. Sê o primeiro a comentar!</p>
        <% } %>
    </div>
</div>

    </div> <script src="/js/movie_details.js"></script>

</body>
</html>